# Recursive function 1
Tnum Fibonacci(Tnum n) =
    set:
    if n <= 2 -> 1
    else Fibonacci(n-1) + Fibonacci(n-2)

# Recursive function 2
Tnum Factorial(Tnum n) =
    set:
    if n <= 1 -> 1
    else n * Factorial(n-1)    

    
